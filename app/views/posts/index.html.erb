<h1>Posts</h1>

<ul>
  <% @posts.includes(:post).each do |post| %>
    <li>
      <%= link_to "See Post", user_post_path(user_id: params[:user_id], id: post.id), class: 'bg-blue-500 rounded-sm self-center text-white p-1' %>
    </li>

    <%# button to like %>
    <li>
      <%= link_to "Like", user_post_likes_path(user_id: params[:user_id], post_id: post.id), class: 'bg-green-500 rounded-sm self-center text-white p-1', data: { turbo_method: :post } %>
    </li>
  <% end %>
</ul>